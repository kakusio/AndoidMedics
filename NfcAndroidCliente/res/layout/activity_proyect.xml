<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medicslogo"
    android:gravity="start" >

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Acerque el RFID al celular"
        android:textColor="#ffffff"
        tools:context=".MainActivity" />

    <TextView
        android:id="@+id/doctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:text="Bienvenido"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonAgregarPariente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctorName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:text="Agregar Pariente"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonAgregarExamen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctorName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Agregar Examen"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonEditarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAgregarPariente"
        android:layout_centerHorizontal="true"
        android:text="Editar Perfil"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonDeligarMedico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonEditarPerfil"
        android:layout_centerHorizontal="true"
        android:text="Deligar Medico"
        android:visibility="invisible" />

</RelativeLayout>
