<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medicslogo"
    android:gravity="start" >

    <TextView
        android:id="@+id/textAddExamen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="2dip"
        android:paddingLeft="40dip"
        android:paddingTop="2dip"
        android:text="Agregar Examen"
        android:textSize="20dp"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/textTipoMedida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textAddExamen"
        android:layout_marginTop="50dp"
        android:text="Tipo de Medida" />

    <EditText
        android:id="@+id/editValorMedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textValorMedico"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#05013ADF"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTipoMedida"
        android:layout_centerHorizontal="true" >
    </RadioGroup>

    <TextView
        android:id="@+id/textValorMedico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Valor Medido:" />

    <Button
        android:id="@+id/buttonEnviarMedidas"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:text="Enviar" />

</RelativeLayout>