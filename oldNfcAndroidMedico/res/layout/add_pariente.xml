<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medicslogo"
    android:gravity="start" >

     <Button
        android:id="@+id/salirAddPariente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp"
        android:text="Regresar" />

    <TextView
        android:id="@+id/textAddPariente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:text="Agregar Paciente" >
    </TextView>
    <TextView
        android:id="@+id/textStatusAddPariente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textAddPariente"
        android:layout_marginTop="105dp"
        android:textColor="#ffffff"
        android:text="Acerque el NFC del paciente, para agregarlo."
        android:textAppearance="?android:attr/textAppearanceLarge" />
     
</RelativeLayout>